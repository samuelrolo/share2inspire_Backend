# Ficheiro .env.example para o projeto Share2Inspire Backend
# Copie este ficheiro para .env e preencha com as suas chaves reais

# Chaves API Brevo (Sendinblue)
BREVO_API_KEY="sua_chave_brevo_aqui"
BREVO_SENDER_EMAIL=seu_email@dominio.com
BREVO_SENDER_NAME=Seu Nome

# Chaves API IfthenPay
IFTHENPAY_GATEWAY_KEY="sua_gateway_key_aqui" 
IFTHENPAY_CALLBACK_KEY="sua_callback_key_aqui"
IFTHENPAY_MBWAY_KEY=sua_mbway_key
IFTHENPAY_PAYSHOP_KEY=sua_payshop_key
IFTHENPAY_MB_KEY=sua_mb_key

# Configuração Flask
FLASK_SECRET_KEY="gere_uma_chave_secreta_aqui"
FLASK_DEBUG=False
FLASK_ENV=production

# URL do Backend (para callbacks)
BACKEND_URL=https://seu-backend.appspot.com

# URL do Google Calendar
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/sua_url_aqui/exec

# Anti-Phishing Key (se necessário)
ANTI_PHISHING_KEY="sua_anti_phishing_key_aqui"

